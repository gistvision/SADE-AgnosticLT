{
    "name": "Places_LT_reactnet",
    "n_gpu": 1,

    "arch": {
        "type": "ReActNet",
        "args": {
            "num_classes": 365,
            "returns_feat": true,
            "num_experts": 3
        }
    },
    "data_loader": {
        "type": "Places_LT",
        "args":{
            "data_dir": "./data/Place365",
            "batch_size": 128,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01
        }
    },
    "add_extra_info": true,
    "loss": {
        "type": "DiverseExpertLoss",
        "args":{
             "tau": 2
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 30,
            "eta_min": 0
        }
    },
    "trainer": {
        "epochs": 30,
        "save_dir": "saved/places/reactnet/",
        "save_period": 30,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}
